<div class="row">
    <div class="card-items mt-3 mb-3">
        {{#each products}}
        <div class="col-xs-12 col-sm-6 col-lg-4 mb-4">
            <div class="card shadow-sm">
                <img src="{{ imagePath }}"
                    class="card-img-top img-thumbnail" alt="{{ title }}">
                <div class="card-body">
                    <div class="card-content">
                        <h5 class="card-title">{{ title }}</h5>
                        <p class="card-text mb-3">{{ description }}</p>
                    </div>
                    <div class="card-foot mb-3">
                        <a href="/edit-product/{{_id}}" class="btn btn-warning">Edit</a>
                        <a href="/add-product" class="btn btn-primary">Create</a>
                        <a href="/delete-product/{{_id}}" onclick="return confirm('Are you sure?')" class="btn btn-danger">Delete</a>
                    </div>
                    <div class="card-foot">
                        <span class="price">${{ price }}</span>
                        <a href="/add-to-cart/{{this._id}}" class="btn btn-success">Add</a>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

